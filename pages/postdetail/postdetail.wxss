.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scroll-area {
  flex: 1;
  overflow: auto;
}

.input-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  gap: 30px;
  align-items: center;
  padding: 6px 10px;
  background-color: rgb(255, 255, 255);
  transition: bottom 0.25s;
  /* height: 90px; */
}

.text-input {
  border-radius: 6px;
  width: 100%;
  min-height: 20px;
  height: 20px;
  background-color: rgb(255, 255, 255);
  border: solid 1px rgb(139, 139, 139);
  padding: 8px 6px;
}
