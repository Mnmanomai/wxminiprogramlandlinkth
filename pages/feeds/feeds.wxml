<!--pages/feeds/feeds.wxml-->
<view class="page-container" style="position: relative;">
    <headergroupchat namegroup="{{groupName}}" groupid="{{groupId}}" assetid="{{assetNo}}" />
    <view class="" style="padding-block: 2px;">
        <createpost PictureOwenrID="{{Images}}" ugroup="{{groupId}}" />
    </view>
    <view class="" wx:if="{{datapost}}">
        <view class="" style="display: flex;gap: 2px;flex-direction: column;">
            <block class="" wx:for="{{datapost}}" wx:key="post">
                <feed no="{{item.uid}}" picturepost="{{item.create_by_pic}}" namepost="{{item.create_by_name}}" time="{{item.create_datetime}}" commentcount="{{item.comment_count}}" detail="{{item.textdetail}}" ugroupid="{{groupId}}" commentlatest="{{item.comment_latest}}" />
            </block>
        </view>
    </view>
    <view class="" wx:else="{{datapost}}">
        <view class="" style="color: rgb(168, 168, 168);width: 100%;height: 40vh;display: flex;justify-content: center;align-items: center;flex-direction: column;gap: 30px;">
            <van-icon name="upgrade" size="60" />
            <view class="" style="text-align: center;padding-inline: 50px;font-weight: 500;">目前还没有关于此资产的问题。您可以通过上方的提问按钮创建问题。</view>
        </view>
    </view>
</view>