<!--index.wxml-->
<view class="page-container">
    <scroll-view scroll-y="{{true}}" style="height: auto;">
        <view class="" style="display: flex;flex-direction: column;gap: 10px;">
            <view class="" style="position: relative;width: 100%;height: 100%;">
                <cover />
            </view>

            <view class="" bind:tap="Gotocompany" style="width: 100%;height: 100%;padding: 10px 0px;">
                <button bind:tap="Gotocompany" style="color: black;background-color: brown;">create investment</button>
            </view>
            <view class="" bind:tap="Gotoinvestment" style="width: 100%;height: 100%;padding: 10px 0px; margin-bottom: 50px;">
                <button bind:tap="Gotoinvestment" style="color: black;background-color: brown;">gotomyinvestment</button>
            </view>


            <view class="" style="transform: translate(0px,-50px);padding: 0px 10px;display: flex;flex-direction: column;gap: 10px;padding-bottom: 50px;">
