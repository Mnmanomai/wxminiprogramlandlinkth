<!--pages/nearlocation/nearlocation.wxml-->
<view class="page-container">
  <view class="" >
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" id="districtSearch" bind:change="filterDistrict" />
  </view>
  <view class="" wx:if="{{LocationData}}" style="padding-bottom: 80px;">
    <van-cell-group>
      <block wx:for="{{LocationData}}" wx:key="id">
        <van-cell icon="guide-o" title="{{item.name_search_zh}}" 
        data-id="{{item.ID_search}}"
        data-lat="{{item.latitude}}"
        data-long="{{item.longitude}}"
        data-text="{{item.name_search_zh}}"
        bind:tap="nextToSearch" >{{item.type_search}}</van-cell>
      </block>
    </van-cell-group>
  </view>
</view>
