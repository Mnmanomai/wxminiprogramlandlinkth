/* pages/createpost/index.wxss */
.cardfeed {
  width: 100%;
  height: 100%;
  /* border: solid 1px; */
  /* padding: 10px; */
  display: flex;
  flex-direction: column;
  gap: 4px;
  background: rgba(238, 238, 238, 0.7);

}

.contentheader {
  display: flex;
  gap: 8px;
  align-items: center;
  padding: 10px 10px;
  padding-bottom: 6px;
}

.imagesperson {
  width: 50px;
  height: 50px;
  background: rgb(255, 255, 255);
  border-radius: 100%;
}

.postername {
  font-weight: 600;
}

.time {
  font-weight: 500;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.6);

}

.buttonpost {
  font-size: 12px;
  background-color: rgb(0, 61, 85);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  padding: 8px 3px;
  border-radius: 6px;
}


.overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loader {
  width: 50px;
  height: 50px;
  /* background-color: white;
  border-radius: 10%; */
  /* border: solid 5px; */
  /* border-color: linear-gradient(to top,
      rgb(255, 255, 255),
      rgb(255, 0, 0)); */
  animation: spin 1s linear infinite;
}

.arc-loader {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(0, 0, 0, 0.15);
  border-top-color: #1989fa;      /* ส่วนที่เห็น */
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.bg-arc-load{
  padding: 40px;background-color: rgb(199, 199, 199);border-radius: 20px;
}

/* animation */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
