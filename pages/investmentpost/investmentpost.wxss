/* pages/investmentpost/investmentpost.wxss */
.card {
  padding: 15px 15px;
  margin: 10px 10px;
  border: solid 1px rgba(0, 0, 0, 0.116);
  box-shadow: 20px 8px 40px rgba(0, 0, 0, 0.07);
  border-radius: 16px;
  background-color: rgb(253, 253, 253);
}
.text-muted{
  color: rgba(0, 0, 0, 0.7);
}
.header{
  font-weight: 600;
  font-size: 18px;
  color: rgba(0, 0, 0, 0.8);
}

.description{
  margin-top: 7px;
  padding-left: 10px;
}
.description-border{
  margin: 12px 0px;
  box-shadow: 3px 1px 9px rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  padding: 8px 12px;
  background: white;
  position: relative;
  overflow: hidden;
}
.leftcolor{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 10px;
  background-color: #080048;
}

.description.collapsed {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.description.expanded {
  -webkit-line-clamp: unset;
}

.toggle {
  color: #1876f2cb;
  font-size: 12px;
  margin-top: 5px;
  padding-left: 10px;
}

.option-item {
  padding: 12px 0;
  font-size: 16px;
  border-bottom: 1px solid #eee;
  color: rgb(0, 0, 0,0.5);
  text-align: center;
  background-color: white;
  width: 100%;
  font-weight: 400;
}


.info-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px; 
  padding: 0px 0px;
  width: 100%;
}
.box-ico-img{
  width: 18px;
  height: 18px;
}
.box-icon{

}
.box-title{
  flex: 1; 
  font-weight: 600;
  width: 100px;
  color: #080048;
}
.box-des{
  flex: 0 0 auto; 
  text-align: left;
  width: 200px;
}
