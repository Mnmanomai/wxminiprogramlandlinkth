/* component/chatlist/index.wxss */
.limit1 {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 16px;
  font-weight: 400;
}

.mainlist {
  display: flex;
  flex-direction: column;
  padding: 2px 0px;
  /* overflow: scroll; */
}

.mainlist::-webkit-scrollbar {
  display: none;
}

.list {
  width: 100%;
  padding: 6px 0px 6px 4px;
  display: flex;
  gap: 4px;
  align-items: center;
  overflow: scroll;
  height: 60px;
}

.images {
  background-color: white;
  width: 60px;
  height: 60px;
  border-radius: 16px;
}

.mockimages {
  background-color: white;
  width: 70px;
  height: 70px;
  border-radius: 16px;
}

.notifybotton {
  background-color: rgb(9, 94, 116);
  border-radius: 100%;
  width: 10px;
  height: 10px;
}

.imagespart {
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: blue; */
  width: 15%;
  height: 100%;
}

.namepart {
  /* background: rgb(172, 79, 79); */
  height: 60px;
  width: 70%;
}

.notipart {
  /* background: #000; */
  height: 100%;
  width: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.optionpart {
  background: rgb(52, 136, 214);
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

.deletepart {
  background: red;
  color: white;
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.textnewmsg {
  font-weight: 500;
  max-width: 70%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.notitag {
  background-color: rgb(29, 119, 223);
  border-radius: 100%;
  width: 24px;
  height: 24px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-weight: 500;
  font-size: 12px;
}
