.description.collapsed {
  display: -webkit-box;
  -webkit-line-clamp: 3;   /* โชว์แค่ 3 บรรทัด */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.description.expanded {
  -webkit-line-clamp: unset;
}

.toggle {
  color: #1876f2cb;
  font-size: 12px;
  margin-top: 5px;
}

.option-item {
  padding: 12px 0;
  font-size: 16px;
  border-bottom: 1px solid #eee;
  color: rgb(0, 0, 0,0.5);
  text-align: center;
  background-color: white;
  width: 100%;
  font-weight: 400;
}
