/* component/minicard/index.wxss */
.card {
  background:white;
  width: 260px;
  padding: 10px;
  border-radius: 28px;
  box-shadow: 0.25px 0.5px 4px 0.25px rgb(0,0,0,0.25);
  position: relative;
}

.images{
  width: 100%;
  height: 200px;
  border-radius: 16px;
}

.NameAsset {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: 600;
  font-size: 16px;
}

.Location{
  font-size: 14px;
}
.Area{
  display: flex;
  font-size: 14px;
}
.Time{
  font-size: 14px;
}

.Price{
  font-size: 16px;
  text-align: end;
  font-weight: 700;
  color: rgb(23, 95, 250);
}

.bg-purple {
  background-color: #800080;
  color: white;
}

.bg-lightpurple {
  background-color: #DDA0DD;
  color: black;
}

.bg-green {
  color: black;
  background-color: #2E8B57;
}

.bg-orange {
  background-color: #FFA500;
  color: black;
}

.bg-yellow {
  background-color: #FFFF00;
  color: black;
}

.bg-none {
  background-color: white;
  color: black;
}

.bg-brown {
  background-color: #8B4513;
  color: white;
}

.bg-lightbrown {
  background-color: #D2B48C;
  color: black;
}

.bg-red {
  background-color: #DC143C;
  color: white;
}

.bg-blue {
  background-color: #0000FF;
  color: white;
}

.bg-greendiagonal {
  background-color: #FFFFFF;
  background-image: repeating-linear-gradient(45deg,
      #008000,
      #008000 5px,
      #ffffff 5px,
      #ffffff 10px);
  color: #000000;
}

.bg-gray {
  background-color: #696969;
  color: white;
}

.bg-olivegreen {
  background-color: #808000;
  color: white;
}

.bg-pink {
  background-color: #FFC0CB;
  color: black;
}
.tag{
  position: absolute;
  top: 16px;
  left: 16px;
  padding: 2px 10px;
  border-radius: 8px;
}