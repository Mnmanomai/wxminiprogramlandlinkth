/* component/cardInvestment/index.wxss */

.card {
  padding: 15px 15px;
  margin: 10px 10px;
  border: solid 1px rgba(0, 0, 0, 0.116);
  box-shadow: 20px 8px 40px rgba(0, 0, 0, 0.07);
  border-radius: 16px;
  background-color: rgb(253, 253, 253);
}
.text-muted{
  color: rgba(0, 0, 0, 0.7);
}

.headerdiv1{
  flex: 9;
}
.headerdiv2{
  flex: 1;
  display: flex;
  justify-content: flex-end;
}


.header{
  font-weight: 600;
  font-size: 15px;
  color: rgba(0, 0, 0, 0.8);
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 100%;
}

.description{
  margin-top: 7px;
  padding-left: 10px;
  color: #000000ab;

  /* height: 60px; */
}
.description-border{
  margin: 12px 0px;
  box-shadow: 3px 1px 9px rgba(0, 0, 0, 0.05);
  border-radius: 8px;
  padding: 8px 12px;
  background: white;
  position: relative;
  overflow: hidden;
  font-size: 14px;
}
.leftcolor{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 10px;
  background-color: #080048;
}

