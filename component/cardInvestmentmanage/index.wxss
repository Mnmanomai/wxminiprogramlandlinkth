.description.collapsed {
  display: -webkit-box;
  -webkit-line-clamp: 3;   /* โชว์แค่ 3 บรรทัด */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.description.expanded {
  -webkit-line-clamp: unset;
}

.toggle {
  color: #1876f2cb;
  font-size: 12px;
  margin-top: 5px;
  padding-left: 10px;
}

.option-item {
  padding: 12px 0;
  font-size: 16px;
  border-bottom: 1px solid #eee;
  color: rgb(0, 0, 0,0.5);
  text-align: center;
  background-color: white;
  width: 100%;
  font-weight: 400;
}

.buttonmenu{
  display: flex;
  gap: 10px;
}

.info-box{
  display: flex;
  align-items: center; /* ให้แนวกลางในแนวตั้ง */
  justify-content: space-between; /* กระจายช่องว่างระหว่างสามส่วน */
  gap: 10px; /* ระยะห่างระหว่างแต่ละส่วน */
  padding: 0px 0px;
  width: 100%;
}
.box-ico-img{
  width: 18px;
  height: 18px;
}
.box-icon{

}
.box-title{
  flex: 1; /* กินพื้นที่ยืดหยุ่น */
  font-weight: 600;
  width: 100px;
  color: #080048;
  /* background-color: rebeccapurple; */
}
.box-des{
  flex: 0 0 auto; /* ไม่ขยาย */
  text-align: left; /* ชิดขวา */
  /* background-color: blue; */
  width: 200px;
}

.listPopup {
  width: 100%;
  height: 50px;
  background-color: rgb(255, 255, 255);
  display: flex;
  color: rgb(0,0,0,0.7);
  gap: 4px;
  font-size: 14px;
  align-items: center;
  padding-left: 20px;
  font-weight: 400;
}
