.linelimit {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.linelimit2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.linelimit4 {
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.grid {
  display: grid;
  grid-template-columns: repeat(12, minmax(0, 1fr));
  padding: 10px 0px;
  gap: 10px;
}

.gridchild {
  grid-column: span 6 / span 6;
  background-color: white;
  font-size: 14px;
  border-radius: 10px;
  overflow: hidden;
  padding: 4px;
  box-shadow: 0.25px 0.5px 4px 0.25px rgb(0, 0, 0, 0.25);
}

.title {
  font-size: 16px;
  font-weight: 600;
}

