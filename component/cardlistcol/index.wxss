/* component/cardlistcol/index.wxss */
.tagdetail {
  border: 1px;
  border-radius: 4px;
  border-style: solid;
  width: auto;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 12px;
}

.limit2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: 600;
}

.bg-purple {
  background-color: #800080;
  color: white;
}

